# Ejemplo de configuración de credenciales para Power BI API

# Datos del Tenant (tu organización de Microsoft Entra ID)
TENANT_ID = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# App Registration (Azure)
CLIENT_ID = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Solo necesario si usas Service Principal
CLIENT_SECRET = "pon_aqui_el_secret_generado"

# URL de autorización
AUTHORITY = "https://login.microsoftonline.com/${TENANT_ID}"

# Scope por defecto de Power BI
SCOPE = "https://analysis.windows.net/powerbi/api/.default"
